##----------------------------------------------------------------------------##
#                               fetchmail設定                                #
##----------------------------------------------------------------------------##

# ログファイルの指定
set logfile "./Maildir/fetchmail.log"

#エラーメールの送信先(fujimoto)を設定
set postmaster fujimo

# エラーメールを送信者に返さないための設定
set nobouncemail

# メールのチェック間隔(秒)
#set daemon 300

# 共通設定
defaults
    protocol pop3         # メールサーバのプロトコルを指定(pop3、imap等)
#   uidl                  # 既読チェックを行う
    keep                  # メールを削除するかしないかの設定（メールを削除する場合はflush)
    no mimedecode         # メールサブジェクトをデコードしないよう（文字化けしないよう）に設定
    smtphost localhost    # 受信したメールをlocalhost(Postfix)渡すための設定

# popサーバ
poll world.ocn.ne.jp
        user fujimo-net
        password "imdg75"
        is "fujimo" here
