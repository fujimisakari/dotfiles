PATH=/usr/bin:/bin
MAILDIR=$HOME/Maildir           # メール配送先ディレクトリ
DEFAULT=$MAILDIR/               # 最後までマッチするものがなかった時のデフォルト
LOGFILE=$MAILDIR/procmail.log   # ログの保存先を指定

:0 fw
| bsfilter --auto-update --pipe --insert-flag
./.spam/

:0
* ^X-Spam-Flag: Yes
./.spam/

:0
* ^To: .*@world.ocn.ne.jp.*
{
    :0
    * ^From:.*(amazon.co.jp).*
    * ^Subject:.*iso-2022-jp
    * ^Subject:.*\/.*
    * ? echo "$MATCH" | nkf -me | egrep '通販'
    * ^From:.*amazon.co.jp.*
    ./.web_shopping_ocn/

    :0
    * ^From:.*(ping-t.com|MyDNS.JP).*
    ./.m_magazen_ocn/

    :0
    * ^From:.*(sonyfinance-card.com|goldpoint.co.jp|vpass.ne.jp|ntt.com).*
    ./.card/

    :0
    * ^From:.*sakura.ad.jp.*
    ./.sakura/

    :0
    * ^From:.*mailmag@mag2.com.*
    ./.rubikiti_magazin/

    :0
    * ^From:.*(lpi.or.jp|LPI).*
    ./.lpi-japan/

    :0
    * ^From:.*(prometric-jp.com).*
    ./.sikaku/

    :0
    * ^From:.*(ezweb|softbank|docomo).*
    ./.mobile_com/

    :0
    * ^From:.*(fc2@fc2.cc).*
    ./.spam/

    :0
    ./.inbox_ocn/
}

:0
* ^To: .*@fujimo-net.com.*
{
    :0
    * ^From:.*anemone.spica-star@ezweb.ne.jp.*
    ./.yukari_com/

    :0
    * ^From:.*facebookmail.com.*
    ./.facebook_com/

    :0
    * ^From:.*twitter.com.*
    ./.twitter_com/

    :0
    * ^From:.*mbga.jp.*
    ./.mobage_com/

    :0
    * ^From:.*hatena.ne.jp.*
    ./.hatena_com/

    :0
    * ^From:.*(ezweb|softbank|docomo).*
    ./.mobile_com/

    :0
    * ^From:.*(zyngamail.com).*
    ./.spam/

    :0
    ./.inbox_com/
}
